<?xml version="1.0" encoding="utf-8"?>
<controls:PrayersPanel
    x:Class="AwqatSalaat.WinUI.Views.PanelAlt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AwqatSalaat.WinUI.Views"
    xmlns:converters="using:AwqatSalaat.WinUI.Converters"
    xmlns:controls="using:AwqatSalaat.WinUI.Controls"
    xmlns:mk="using:AwqatSalaat.WinUI.Markup"
    xmlns:vm="using:AwqatSalaat.ViewModels"
    xmlns:ash="using:AwqatSalaat.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:DefaultBindMode="OneWay">

    <controls:PrayersPanel.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Assets/Vectors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:PrayersPanel.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border CornerRadius="{ThemeResource ControlCornerRadius}" Background="{ThemeResource ControlAltFillColorQuarternaryBrush}" Margin="0,16,0,4" HorizontalAlignment="Center" Grid.Row="0">
            <Grid Margin="8,4" FlowDirection="LeftToRight">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Path Data="{StaticResource LocationIcon}" Height="12" Stretch="Uniform" Fill="{ThemeResource TextFillColorTertiaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <controls:StackPanelEx Orientation="Horizontal" MaxWidth="200" HorizontalAlignment="Center" Grid.Column="1" SizeChanged="LocationPanel_SizeChanged">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind ViewModel.City}" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                        <TextBlock x:Name="comma" Text="," Foreground="{ThemeResource TextFillColorTertiaryBrush}" Margin="0,0,4,0"/>
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.Country}" Foreground="{ThemeResource TextFillColorTertiaryBrush}" HorizontalAlignment="Center"/>
                </controls:StackPanelEx>
            </Grid>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,16">
            <TextBlock Text="{x:Bind converters:CustomDateTimeConverter.Format(ViewModel.DisplayedDate, 'ddd', ash:LocaleManager.Default.Current)}" FontSize="12" Foreground="{ThemeResource TextFillColorTertiaryBrush}" Margin="0,4" HorizontalAlignment="Center"/>
            <Rectangle Height="1" Width="8" Fill="{ThemeResource ControlElevationBorderBrush}" Margin="8,5,8,3"/>
            <TextBlock Text="{x:Bind ash:HijriDateHelper.Format(ViewModel.DisplayedDate, 'dd MMMM yyyy', ash:LocaleManager.Default.Current)}" FontSize="12" Foreground="{ThemeResource TextFillColorTertiaryBrush}" FlowDirection="RightToLeft" Margin="0,4" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,4" HorizontalAlignment="Center" Visibility="Collapsed">
                <TextBlock Text="{mk:L11n Key=UI.Panel.CorrespondTo}" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="{x:Bind ViewModel.DisplayedDate.ToString('dd/MM/yyyy', x:Null)}" Foreground="{ThemeResource TextFillColorTertiaryBrush}" Margin="4,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <ItemsControl ItemsSource="{x:Bind ViewModel.Items}" Grid.Row="2">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:PrayerTimeViewModel">
                    <controls:PrayerTimeItem
                        State="{x:Bind State}"
                        Time="{x:Bind Time}"
                        TimeString="{x:Bind converters:CustomDateTimeConverter.FormatShortTimeWithoutAMPM(Time, ash:LocaleManager.Default.CurrentCulture)}"
                        AMPMString="{x:Bind converters:CustomDateTimeConverter.FormatShortTimeAMPM(Time, ash:LocaleManager.Default.CurrentCulture)}"
                        PrayerName="{x:Bind Name}"
                        DismissCommand="{x:Bind DismissNotification}"
                        Visibility="{x:Bind IsVisible}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</controls:PrayersPanel>
